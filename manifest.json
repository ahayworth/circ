{
  "name": "Chrome IRC",
  "description": "A simple IRC client for Chrome",
  "version": "1",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "experimental",
    "clipboardRead",
    "clipboardWrite",
    "socket",
    "storage",
    "notifications"
  ],
  "app": {
    "background": {
      "scripts": ["launch.js"]
    }
  }
}
