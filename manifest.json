{
  "name": "Chrome IRC",
  "description": "A simple IRC client for Chrome",
  "version": "3",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    { "socket": ["tcp-connect"] },
    "storage",
    "notifications"
  ],
  "app": {
    "background": {
      "scripts": ["launch.js"]
    }
  }
}
